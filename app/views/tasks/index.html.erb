<h1>This is an overview of my tasks: </h1>

<ul style="list-style: none;">
<% @tasks.each do |task| %>
<li>
  <% if task.completed %>
  <i class="far fa-check-square"></i>
  <% else %>
  <i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task.id) %>
  </li>
  <%end %>
</ul>

<i class="far fa-plus-square"></i><%= link_to "New Task", new_task_path %>


